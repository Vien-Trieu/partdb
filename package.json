{
    "name": "partdb",
    "private": true,
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
      "dev": "cd client && npm run dev",
      "electron": "electron .",
      "start": "concurrently \"npm run dev\" \"npm run electron\"",
      "build-client": "cd client && npm run build",
      "build": "npm run build-client && electron-builder"
    },
    "build": {
      "appId": "com.partdb.app",
      "productName": "PartDB",
      "files": [
        "dist/",
        "main.js",
        "preload.js",
        "node_modules/"
      ],
      "directories": {
        "buildResources": "assets"
      },
      "win": {
        "target": "nsis"
      }
    },
    "devDependencies": {
      "concurrently": "^8.2.0",
      "electron": "^29.0.0",
      "electron-builder": "^24.6.0"
    }
  }